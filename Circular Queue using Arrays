Source code:

#include<stdio.h>
#define size 8
int q[size];
int rear = 0;
int front = 0;
int c = 0;
void enqueue()
{
        int ele;
        if(c==size)
        {
                printf("queue is full\n");
        }
        else
        {
                printf("enter element: ");
                scanf("%d",&ele);
                q[rear] = ele;
                rear = (rear+1)%size;
                c++;
        }
}
void dequeue()
{
        int ele;
        if(c==0 && rear==front)
        {
                       printf("queue is empty\n");

        }
        else
        {
                printf("popped element is %d\n",q[front]);
                front = (front+1)%size;
                c--;
        }
}
void display()
{
        if(rear==front && c==0)
        {
                printf("queue is empty\n");
        }
        else if(front != rear)
        {
         if(rear>front)
         {
          for(int i = front;i<rear;i++)
          {
                printf("%d ",q[i]);
          }
         }
         if(rear<front)
         {
                   for(int i=front;i<size;i++)
          {
             printf("%d ",q[i]);
          }
         }
        }
        else if(rear==front && c!=0)
        {
         for(int i=front;i<size;i++)
         {
                printf("%d ",q[i]);
         }
        }
        else
        {
        return;
        }
}
void main()
{
        int ch=0;
        while(ch<4)
        {
                printf("enter choice");
                scanf("%d",&ch);
                switch(ch)
                {
                case 1:
                  {
                        enqueue();
                        break;
                  }
                  case 2:
                  {
                        dequeue();
                        break;
                  }
                  case 3:
                  {
                        display();
                        break;
                  }

                }
        }
}


