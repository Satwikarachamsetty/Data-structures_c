#include<stdio.h>
void bubble(int a[],int n)
{ int i,temp,j;
for(i=0;i<n-1;i++)
{
    for(j=0;j<n-1;j++)
    {
        if(a[j]>a[j+1])
        {
            temp=a[j];
            a[j]=a[j+1];
            a[j+1]=temp;
        }
    }
}
for(i=0;i<n;i++)
{
    printf("%d ",a[i]);
   
}
}
void main()
{
int a[10],n,i;
printf("enter no of elements\n");
scanf("%d",&n);
for(i=0;i<n;i++)
{
    printf("enter element: ");
    scanf("%d",&a[i]);
}
bubble(a,n);
}
